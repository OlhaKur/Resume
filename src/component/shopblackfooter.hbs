{{#with subscribe}}
  <div class='col-12'>
    <div class='card text-bg-dark'>
      <div class='card-header'>
        <h2 class='col-4'>{{header}}</h2>
        <p>{{description}}</p>
      </div>
      <div class='card-body col-8'>
        {{#each buttons}}
          <a
            class='btn btn-primary'
            href='{{link}}'
          >{{text}}</a>
        {{/each}}
      </div>
    </div>
  </div>
{{/with}}