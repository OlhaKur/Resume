<div>
  <h1>{{name}}</h1>
  <div>
    {{#each users}}
      <ul>
        <li>
          <h4>{{name}} ({{id}})</h4>
          {{#each friends}}
            <strong>{{name}}
              ({{age}},
              {{gender}})
              {{#each mutual_friends}}
                <details>
                  <summary>{{name}}
                    -
                    {{id}}
                    ({{gender}},
                    {{age}})</summary>
                </details>
                <hr />
              {{/each}}
            </strong>
          {{/each}}
          {{#each groups}}
            <p>{{name}} ({{description}})</p>
            {{#each members}}
              <em>{{name}}
                -
                {{id}}
                ({{gender}},
                {{age}})</em>
              <hr />

            {{/each}}

          {{/each}}
          <br />
          <hr />

        </li>
      </ul>
      <div>

      </div>
    {{/each}}
  </div>

</div>